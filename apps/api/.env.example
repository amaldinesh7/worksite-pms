# ===========================================
# Worksite API - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/worksite?schema=public"

# JWT Secret - Used for signing access tokens
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-key-change-in-production"

# Cookie Secret - Used for signing httpOnly cookies
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
COOKIE_SECRET="your-cookie-secret-change-in-production"

# Environment
NODE_ENV="development"

# CORS - Allowed origins (comma-separated for multiple)
CORS_ORIGIN="http://localhost:5173"

# OTP Mode - Set to "development" to enable bypass code (123456)
OTP_MODE="development"

# SMS Provider (for production)
# SMS_PROVIDER="twilio"
# TWILIO_ACCOUNT_SID=""
# TWILIO_AUTH_TOKEN=""
# TWILIO_PHONE_NUMBER=""
