{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", ".expo/**", "build/**"]
    },
    "dev": { "cache": false, "persistent": true },
    "test": { "outputs": ["coverage/**"] },
    "lint": { "outputs": [] },
    "typecheck": { "outputs": [] },
    "docs:generate": { "cache": false, "outputs": ["docs/**"] }
  }
}
